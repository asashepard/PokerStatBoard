@model PokerStatBoard.ViewModels.JoinPlayerVM
@{
    ViewBag.Title = "Buy a player into the current game";
}

<style>
    .bg-custom-1 {
        background-color: rgba(225, 225, 225, 0.8);
    }
</style>

<main aria-labelledby="title">
    <div class="container d-flex justify-content-center align-items-center">
        <div class="card bg-custom-1 border-0 rounded-4" style="width: 50vh;">
            <div class="card-body">
                <h2 class="card-title text-center" id="title">@ViewBag.Title:</h2>
                <hr />
                @using (Html.BeginForm("SubmitJoinPlayerForm", "JoinPlayer", FormMethod.Post, new { role = "form" }))
                {
                    @Html.AntiForgeryToken()
                    @Html.HiddenFor(m => m.Group)
                    <div class="row justify-content-center align-items-center">
                        <div class="col-auto">
                            @Html.LabelFor(m => m.Name, new { @class = "col-form-label" })
                        </div>
                    </div>
                    <div class="mb-3 row justify-content-center align-items-center">
                        <div class="col-auto">
                            @Html.DropDownListFor(m => m.Name, PokerStatBoard.Logic.DropDownLogic.GetPlayers(Model.Group.GroupID), "--Select a player--")
                            @Html.ValidationMessageFor(m => m.Name, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="row justify-content-center align-items-center">
                        <div class="col-auto">
                            @Html.LabelFor(m => m.Amount, new { @class = "col-form-label" })
                        </div>
                    </div>
                    <div class="mb-3 row justify-content-center align-items-center">
                        <div class="col-auto">
                            @Html.TextBoxFor(m => m.Amount, new { @class = "form-control" })
                            @Html.ValidationMessageFor(m => m.Amount, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="mb-3 row justify-content-center">
                        <div class="col-sm-8 text-center">
                            <input type="submit" value="Confirm" class="btn btn-outline-dark" />
                        </div>
                    </div>
                }
            </div>
            <div class="text-center mt-auto">
                <img src="~/Images/extended_logo.png" class="mb-3" style="width: 300px; max-width: 80vw;" />
            </div>
        </div>
    </div>
</main>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
