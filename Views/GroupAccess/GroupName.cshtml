@model List<PokerStatBoard.Models.AppUserGroupModel>
@{
    ViewBag.Title = "Dashboard";
}

<style>
    .bg-custom-1 {
        background-color: rgba(225, 225, 225, 0.8);
    }

    .card {
        width: 100%;
        max-width: 100%;
    }

    .btn-group .btn {
        flex: 1;
    }
</style>

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-12 text-center">
            <img src="~/Images/extended_logo.png" class="img-fluid" style="width: 500px; max-width: 80vw;" />
        </div>
    </div>

    <div class="row mt-5">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center flex-wrap mb-3">
                <h2>Users accessing @PokerStatBoard.Logic.GeneralLogic.getGroup(Model[0].GroupID).Name</h2>
            </div>

            <div class="card mb-3 bg-custom-1 border-0 rounded-4">
                <div class="card-body d-flex flex-column flex-md-row justify-content-between align-items-start">
                    <div class="col-auto">
                        0 (Watcher): Can view games, leaderboards, player stats
                    </div>
                    <div class="col-auto">
                        1 (Admin): Can edit games, players, and group access
                    </div>
                    <div class="col-auto">
                        2 (Owner): Permanent group Admin access
                    </div>
                </div>
            </div>

            @for (int i = 0; i < Model.Count; i++)
            {
                var item = Model[i];
                if (item.AccessLevel >= 2)
                {
                    <div class="card mb-3 bg-custom-1 border-0 rounded-4">
                        <div class="card-body d-flex flex-column flex-md-row justify-content-between align-items-start">
                            <div class="mb-3 mb-md-0 mt-1">
                                <h5 class="card-title fs-5">@item.ApplicationUserID</h5>
                            </div>
                            <div class="col-auto">
                                Owner
                            </div>
                        </div>
                    </div>
                }
                else
                {
                    <div class="card mb-3 bg-custom-1 border-0 rounded-4">
                        <div class="card-body d-flex flex-column flex-md-row justify-content-between align-items-start">
                            <div class="mb-3 mb-md-0 mt-1">
                                <h5 class="card-title fs-5">@item.ApplicationUserID</h5>
                            </div>
                            <div class="col-auto">
                                @PokerStatBoard.Logic.GeneralLogic.accessLevelToString(PokerStatBoard.Logic.GeneralLogic.getAccessLevel(item.ApplicationUserID, item.GroupID))
                            </div>
                            <div class="col-auto">
                                <input class="field" type="text" name="@Model[i].AccessLevel" value="@Model[i].AccessLevel" />
                                <input type="hidden" name="@Model[i].ApplicationUserGroupID" value="@Model[i].ApplicationUserGroupID" />
                            </div>
                        </div>
                    </div>
                }
            }
        </div>
    </div>
</div>
