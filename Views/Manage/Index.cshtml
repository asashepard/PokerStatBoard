@model PokerStatBoard.Models.IndexViewModel
@{
    ViewBag.Title = "Manage Account";
}

<main aria-labelledby="title">
    <style>
        body {
            height: 100vh;
            background: radial-gradient(ellipse at left, #e8d67d, transparent), radial-gradient(ellipse at right, #e8d67d, #a85be3);
        }

        footer {
            display: none;
        }

        main {
            margin: auto;
            width: 50%;
            padding: 10px;
        }
    </style>

    <h2 id="title">@ViewBag.Title</h2>

    <p class="text-success">@ViewBag.StatusMessage</p>
    <div>
        <br />
        <dl class="dl-horizontal">
            <dt>Email:</dt>
            <dd>
                <p>
                    @User.Identity.Name
                </p>
            </dd>
            <dt>Password:</dt>
            <dd>
                <p>
                    @Html.ActionLink("Change your password", "ChangePassword") - requires email confirmation
                </p>
            </dd>
        </dl>
    </div>
</main>