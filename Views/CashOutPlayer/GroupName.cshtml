@model PokerStatBoard.ViewModels.CashOutPlayerVM
@{
    ViewBag.Title = "Cash a player out from the current game";
}

<main aria-labelledby="title">
    <div class="container d-flex justify-content-center align-items-center">
        <div class="card" style="width: 50vh;">
            <div class="card-body">
                <h2 class="card-title text-center" id="title">@ViewBag.Title:</h2>
                <hr />
                @using (Html.BeginForm("SubmitCashOutPlayerForm", "CashOutPlayer", FormMethod.Post, new { role = "form" }))
                {
                    @Html.AntiForgeryToken()
                    @Html.HiddenFor(m => m.Group)
                    <div class="row justify-content-center align-items-center">
                        <div class="col-auto">
                            @Html.LabelFor(m => m.Name, new { @class = "col-form-label" })
                        </div>
                    </div>
                    <div class="mb-3 row justify-content-center align-items-center">
                        <div class="col-auto">
                            @Html.DropDownListFor(m => m.Name, PokerStatBoard.Logic.DropDownLogic.GetPlayersCurrentlyPlaying(Model.Group.GroupID), "--Select a player--", new { @class = "form-select" })
                            @Html.ValidationMessageFor(m => m.Name, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="row justify-content-center align-items-center">
                        <div class="col-auto">
                            @Html.LabelFor(m => m.Amount, new { @class = "col-form-label text-center" })
                        </div>
                    </div>
                    <div class="mb-3 row justify-content-center align-items-center">
                        <div class="col-auto">
                            @Html.TextBoxFor(m => m.Amount, new { @class = "form-control" })
                            @Html.ValidationMessageFor(m => m.Amount, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="mb-3 row justify-content-center align-items-center">
                        <div class="col-auto">
                            Left on table: $@Math.Round(PokerStatBoard.Logic.GeneralLogic.getAmountOnTable(Model.Group.GroupID), 2)
                        </div>
                    </div>
                    <div class="row justify-content-center">
                        <div class="col-sm-8 text-center">
                            <input type="submit" value="Confirm" class="btn btn-outline-dark" />
                        </div>
                    </div>
                }
                <div class="mb-3 row mt-4 justify-content-center">
                    <div class="col-sm-12 text-center">
                        <h4>Note - Amount may be altered to prevent leaving money without any players or to prevent a player cashing for more than is left</h4>
                    </div>
                </div>
            </div>
        </div>
    </div>
</main>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}