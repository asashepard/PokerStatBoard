@model List<PokerStatBoard.Models.ApplicationUser>

@{
    ViewBag.Title = "View users";
}

<main aria-labelledby="title">
    <style>
        .main-container {
            display: flex;
            flex-direction: column;
            align-items: center;
            padding-top: 20px;
        }

        .guide {
            background-color: rgba(100, 100, 100, 0.7);
            color: #ededed;
            padding: 10px;
            margin-bottom: 20px;
            box-shadow: 0px 0px 5px rgba(0, 0, 0, 0.1);
            width: 80%;
            max-width: 1200px;
            text-align: center;
        }

        .form-container {
            display: flex;
            flex-wrap: wrap;
            justify-content: space-between;
            max-width: 1200px;
            width: 100%;
        }

        .user {
            background-color: #ededed;
            display: flex;
            align-items: center;
            justify-content: space-between;
            padding: 10px;
            margin: 10px;
            box-shadow: 0px 0px 5px rgba(0, 0, 0, 0.1);
            width: 350px;
        }

        .field {
            background-color: lightblue;
            width: 60px;
            height: 40px;
            line-height: 40px;
            text-align: center;
            margin-left: 10px;
            border: none;
        }

        .button-container {
            width: 100%;
            display: flex;
            justify-content: center;
            margin-top: 20px;
        }

        .button {
            height: 40px;
            width: 160px;
            background-color: rgba(211, 211, 211, 0.7);
            border: transparent;
            box-shadow: 0px 0px 5px rgba(0, 0, 0, 0.1);
            cursor: pointer;
        }

            .button:hover {
                background-color: #ededed;
            }
    </style>

    <div class="main-container">
        <div class="guide">
            0- = view access, 1 = edit access, 2+ = admin access
        </div>
        <form action="@Url.Action("UpdateAccessLevels", "ViewUsers")" method="post">
            @Html.AntiForgeryToken()
            <div class="form-container">
                @for (int i = 0; i < Model.Count; i++)
                {
                    <div class="user">
                        <span>@Model[i].UserName</span>
                        <input class="field" type="text" name="users[@i].accessLevel" value="@Model[i].accessLevel" />
                        <input type="hidden" name="users[@i].Id" value="@Model[i].Id" />
                    </div>
                }
            </div>
            <div class="button-container">
                <button class="button" type="submit">Save Changes</button>
            </div>
        </form>
    </div>
</main>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}