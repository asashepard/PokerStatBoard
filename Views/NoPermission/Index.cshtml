@{
    ViewBag.Title = "No Permission";
}
<body>
    <script>
        setTimeout(function() {
            window.location.href = '@Url.Action("Game", "Home")';
        }, 5000);
    </script>

    <main aria-labelledby="title">
        <div class="container d-flex justify-content-center align-items-center">
            <div class="card" style="width: 50vh;">
                <div class="card-body">
                    <h2 class="card-title text-center" id="title">This action requires administrator permission.</h2>
                    <hr />
                    <div class="row justify-content-center">
                        <div class="col-sm-8 text-center">
                            <h4>You will be redirected in a few seconds...</h4>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </main>
</body>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
