@{
    ViewBag.Title = "No Permission";
}
<body>
    <script>
        setTimeout(function() {
            window.location.href = '@Url.Action("Dashboard", "Home")';
        }, 5000);
    </script>

    <style>
        .bg-custom-1 {
            background-color: rgba(225, 225, 225, 0.8);
        }
    </style>

    <main aria-labelledby="title">
        <div class="container d-flex justify-content-center align-items-center">
            <div class="card bg-custom-1 border-0 rounded-4" style="width: 50vh;">
                <div class="card-body">
                    <h2 class="card-title text-center" id="title">This action requires group owner or administrator permission.</h2>
                    <hr />
                    <div class="row justify-content-center">
                        <div class="col-sm-8 text-center">
                            <h4>You will be redirected in a few seconds...</h4>
                        </div>
                    </div>
                </div>
                <div class="text-center mt-auto">
                    <img src="~/Images/extended_logo.png" class="mb-3" style="width: 300px; max-width: 80vw;" />
                </div>
            </div>
        </div>
    </main>
</body>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
