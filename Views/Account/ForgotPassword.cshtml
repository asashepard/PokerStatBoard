@model PokerStatBoard.Models.ForgotPasswordViewModel
@{
    ViewBag.Title = "Forgot your password?";
}

<main aria-labelledby="title">
    <div class="container d-flex justify-content-center align-items-center">
        <div class="card" style="width: 50vh;">
            <div class="card-body">
                <h2 class="card-title text-center" id="title">@ViewBag.Title</h2>
                <hr />
                @using (Html.BeginForm("ForgotPassword", "Account", FormMethod.Post, new { role = "form" }))
                {
                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary("", new { @class = "text-danger" })
                    <div class="row justify-content-center align-items-center">
                        <div class="col-auto">
                            <h4>Enter your email:</h4>
                        </div>
                    </div>
                    <div class="mb-3 row justify-content-center align-items-center">
                        <div class="col-auto">
                            @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
                        </div>
                    </div>
                    <div class="mb-3 row justify-content-center">
                        <div class="col-sm-8 text-center">
                            <input type="submit" class="btn btn-outline-dark" value="Email Link" />
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</main>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
