@{
    ViewBag.Title = "Reset password confirmation";
}

<main aria-labelledby="title">
    <style>
        body {
            height: 100vh;
            background: radial-gradient(ellipse at left, #e8d67d, transparent), radial-gradient(ellipse at right, #e8d67d, #a85be3);
        }

        footer {
            display: none;
        }

        main {
            margin: auto;
            width: 50%;
            padding: 10px;
        }
    </style>

    <hgroup class="title">
        <h1 id="title">@ViewBag.Title</h1>
    </hgroup>
    <div>
        <br />
        <p>
            Your password has been reset.
        </p>
        <br />
        <p>
            @Html.ActionLink("click here to log in", "Login", "Account", routeValues: null, htmlAttributes: new { id = "loginLink" })
        </p>
    </div>
</main>
