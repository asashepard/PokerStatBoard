@model PokerStatBoard.ViewModels.DashboardVM
@{
    ViewBag.Title = "Dashboard";
}

<main class="container my-5">
    <script>
    function startGame(groupName) {
        const url = '@Url.Action("GroupName", "StartGame", new { groupName = "__groupName__" })'.replace('__groupName__', encodeURIComponent(groupName));
        window.location.href = url;
    }

    function copyInvite(groupId) {
        var copyText = "https://localhost:44382/JoinGroup/" + groupId;

        navigator.clipboard.writeText(copyText).then(function () {
            alert("Copied invite: " + copyText);
        }).catch(function (err) {
            console.error('Failed to copy invite: ', err);
        });
    }

    function viewLeaderboard(groupName) {
        const url = '@Url.Action("GroupName", "Leaderboard", new { groupName = "__groupName__" })'.replace('__groupName__', encodeURIComponent(groupName));
        window.location.href = url;
    }

    function leaveGroup(groupName) {
        const url = '@Url.Action("GroupName", "LeaveGroup", new { groupName = "__groupName__" })'.replace('__groupName__', encodeURIComponent(groupName));
        window.location.href = url;
        }

    function deleteGroup(groupName) {
        const url = '@Url.Action("GroupName", "DeleteGroup", new { groupName = "__groupName__" })'.replace('__groupName__', encodeURIComponent(groupName));
        window.location.href = url;
    }

    function editGroup(groupName) {
        const url = '@Url.Action("GroupName", "GroupAccess", new { groupName = "__groupName__" })'.replace('__groupName__', encodeURIComponent(groupName));
        window.location.href = url;
    }
    </script>

    <style>
        .bg-custom-1 {
            background-color: rgba(225, 225, 225, 0.8);
        }

        .card {
            width: 100%;
            max-width: 100%;
        }

        .btn-group .btn {
            flex: 1;
        }
    </style>

    <div class="card bg-custom-1 border-0 rounded-4">
        <div class="card-body">
            <div class="text-center mb-4">
                <h1 class="display-4">Dashboard</h1>
            </div>

            <div class="row">
                <div class="col-12">
                    <div class="d-flex justify-content-between align-items-center text-center flex-wrap mb-3">
                        <h2>Groups</h2>
                    </div>

                    @foreach (var group in Model.groupModels)
                    {
                        <div class="card mb-3 bg-transparent rounded-4 border-dark" style="border-width: 4px;">
                            <div class="card-body d-flex flex-column flex-md-row justify-content-between align-items-center">
                                <div class="d-flex align-items-center flex-wrap" style="min-width: 30%">
                                    <h5 class="card-title fs-5 mt-1">@group.Name</h5>
                                    @if (group.PokerGameID != Guid.Empty)
                                    {
                                        <img class="m-2" src="~/Images/livedot.gif" style="width: 20px; height: 20px; max-width: 10vw;" />
                                    }
                                </div>
                                <div class="d-flex align-items-center flex-wrap mt-2 mb-2">
                                    <p class="mb-0">@PokerStatBoard.Logic.GeneralLogic.accessLevelToString(PokerStatBoard.Logic.GeneralLogic.getAccessLevel(Model.userID, group.GroupID)) / @PokerStatBoard.Logic.GeneralLogic.getAllPlayers(group.GroupID).Count Players</p>
                                </div>
                                <div class="btn-group flex-wrap">
                                    @if (group.PokerGameID == Guid.Empty)
                                    {
                                        <button class="btn btn-outline-dark rounded-4 mb-2 mb-md-0 me-2" style="border-width: 4px;" onclick="startGame('@group.Name')">Start Game</button>
                                    }
                                    else
                                    {
                                        <button class="btn btn-outline-dark rounded-4 mb-2 mb-md-0 me-2" style="border-width: 4px;" onclick="startGame('@group.Name')">Watch Live</button>
                                    }
                                    <button class="btn btn-outline-dark rounded-4 mb-2 mb-md-0 me-2" style="border-width: 4px;" onclick="viewLeaderboard('@group.Name')">Leaderboard</button>
                                    <button class="btn btn-outline-dark rounded-4 mb-2 mb-md-0 me-2" style="border-width: 4px;" onclick="copyInvite('@group.GroupID.ToString()')">Copy Invite</button>
                                    @if (PokerStatBoard.Logic.GeneralLogic.getAccessLevel(Model.userID, group.GroupID) > 1)
                                    {
                                        <button class="btn btn-outline-danger rounded-4 mb-2 mb-md-0 me-2" style="border-width: 4px;" onclick="leaveGroup('@group.Name')">Leave</button>
                                    }
                                    else
                                    {
                                        <button class="btn btn-outline-danger rounded-4 mb-2 mb-md-0 me-2" style="border-width: 4px;" onclick="deleteGroup('@group.Name')">Delete</button>
                                    }
                                    @if (PokerStatBoard.Logic.GeneralLogic.getAccessLevel(Model.userID, group.GroupID) > 0)
                                    {
                                        <button class="btn btn-outline-primary rounded-4 mb-2 mb-md-0" style="border-width: 4px;" onclick="editGroup('@group.Name')">Edit Access</button>
                                    }
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
        <div class="text-center mt-2 mb-4">
            <button class="btn btn-success rounded-4" style="border-width: 4px;" onclick="location.href='@Url.Action("Index", "CreateGroup")'">Create New Group</button>
        </div>
        <div class="text-center mt-auto">
            <img src="~/Images/extended_logo.png" class="mb-3" style="width: 300px; max-width: 80vw;" />
        </div>
    </div>
</main>