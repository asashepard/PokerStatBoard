@{
    ViewBag.Title = "Home";
}

<script>
    function scrollPage() {
        document.getElementById("scrollTarget").scrollIntoView(true);
    }
</script>

<main class="container my-5">
    <!-- Header Section -->
    <div class="text-center mb-5">
        <img src="~/Images/extended_logo.png" class="mb-3" style="width: 500px; max-width: 80vw;" />
        <h1 class="display-4">Welcome to a new kind of poker app.</h1>
        <p class="lead fs-3 mt-2">The ultimate tool for hosting, tracking, and enhancing your poker games. Stay on top of your game like never before with our extensive player-oriented statistics.</p>
    </div>

    <div class="d-flex justify-content-center align-items-center w-100" >
        <img class="mb-2" src="~/Images/downarrow.gif" style="max-width: 10vh; cursor: pointer;" onclick="scrollPage()" />
    </div>

    <!-- Features Section -->
    <div class="my-4" id="scrollTarget" style="scroll-margin-top: 2vh;">
        <div class="container text-center">
            <h2 class="display-5">Live Game Display</h2>
            <p class="lead">Home games? Stay updated and keep track of money with a real-time dashboard.</p>
        </div>
    </div>
    <img class="rounded-5 w-100 align-content-center" src="~/Images/featuresimage-1.png" />

    <div class="my-4">
        <div class="container text-center">
            <h2 class="display-5">Next-Level Tracking</h2>
            <p class="lead">Both when playing alone and with friends, track your performance over time.</p>
        </div>
    </div>

    <div class="my-4">
        <div class="container text-center">
            <h2 class="display-5">Detailed Statistics</h2>
            <p class="lead">Analyze your play and take your game to the next level with our powerful, one-of-a-kind suite of tools.</p>
        </div>
    </div>

    <!-- Call to Action Section -->
    <div class="text-center mb-5">
        <button class="btn btn-outline-dark btn-lg" onclick="window.location.href='@Url.Action("Dashboard", "Player")'" style="border-width: 4px;">
            Go to Dashboard
        </button>
    </div>

    <!-- Testimonials Section -->
    <div class="text-center mb-5">
        <h2 class="mb-4">What Our Users Say</h2>
        <div id="carouselTestimonials" class="carousel slide" data-bs-ride="carousel">
            <div class="carousel-inner">
                <div class="carousel-item active">
                    <blockquote class="blockquote">
                        <p class="mb-0">"This has transformed our home games. The live display keeps everyone engaged, and the stats help us improve."</p>
                    </blockquote>
                </div>
                <div class="carousel-item">
                    <blockquote class="blockquote">
                        <p class="mb-0">"The live system not only offers cool stats, but also makes sure no penny goes unaccounted for."</p>
                    </blockquote>
                </div>
                <div class="carousel-item">
                    <blockquote class="blockquote">
                        <p class="mb-0">"The player-oriented tracking model has helped me identify weaknesses I didn't know existed."</p>
                    </blockquote>
                </div>
            </div>
        </div>
    </div>

    <!-- Footer Section -->
    <footer class="text-center mt-5">
        <p>&copy; 2024 Poker Tracker Suite. All rights reserved.</p>
    </footer>
</main>